<h1>Cocktails</h1>
<div class="card" style="width: 18rem;">
<% @cocktails.each do |cocktail| %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&auto=format&fit=crop&w=1425&q=80)">
<%= link_to cocktail.name, cocktail_path(cocktail) %>
</div>
<% end %>
</div>

<%= link_to 'Add a new cocktail', new_cocktail_path, class: "btn btn-ghost" %>




